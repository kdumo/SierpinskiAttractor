<Window x:Class="SierpinskiAttractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="184*"/>
        </Grid.RowDefinitions>
        <ComboBox HorizontalAlignment="Left" Margin="109,240,0,0" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <RadioButton Content="Square" HorizontalAlignment="Left" Margin="20,236,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <RadioButton Content="Ellipse" HorizontalAlignment="Left" Margin="20,257,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="Shape" HorizontalAlignment="Left" Margin="20,209,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="Color" HorizontalAlignment="Left" Margin="109,209,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Button Content="Run" HorizontalAlignment="Left" Margin="286,209,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.504,0.286" Grid.Row="1"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="286,236,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.516,0.613" Grid.Row="1"/>
        <Canvas HorizontalAlignment="Left" Height="223" Margin="10,10,0,0" VerticalAlignment="Top" Width="474" Grid.RowSpan="2"/>
        <Button Content="About" HorizontalAlignment="Left" Height="27" Margin="517,361,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.428,0.321" Click="About_Click" />
        <Button Content="Usage" HorizontalAlignment="Left" Margin="613,361,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Usage_Click"/>

    </Grid>
</Window>
